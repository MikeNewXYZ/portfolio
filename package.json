{
	"name": "express-demo",
	"version": "1.0.0",
	"private": true,
	"description": "Express Demo Using liquidjs",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"tailwind-watch": "npx tailwindcss -i ./src/main.css -o ./public/styles/main.css --watch",
		"tailwind-minify": "npx tailwindcss -i ./src/main.css -o ./public/styles/main.css --minify",
		"nodemon": "nodemon ./index.js",
		"dev": "npm-run-all --parallel nodemon tailwind-watch",
		"build": "npm-run-all --parallel tailwind-minify"
	},
	"dependencies": {
		"express": "^4.14.0",
		"liquidjs": "*"
	},
	"devDependencies": {
		"@shopify/prettier-plugin-liquid": "^1.5.0",
		"concurrently": "^8.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"tailwindcss": "^3.4.6"
	}
}
