---
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import { Icon } from "astro-icon/components";

const contactPageEntry: CollectionEntry<"contactPage"> = await getEntry("contactPage", "index");
const { contactDetails } = contactPageEntry.data;
---

<div class="flex flex-col gap-2 md:justify-between">
	<h2 class="text-2xl uppercase">contact me</h2>
	<ul>
		{
			contactDetails.map(({ url, icon, label }) => (
				<li>
					<a
						href={url}
						class="flex items-center gap-2 text-base p-0.5 button border-0"
						target="_blank"
					>
						<Icon name={icon} />
						<span>{label}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
