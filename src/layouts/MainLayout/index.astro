---
import "@fontsource/space-grotesk";
import Header from "../../component/Header/index.astro";
import Footer from "../../component/Footer/index.astro";
import getSettings from "../../lib/getSettings";

const settings = await getSettings();
const seoTitle = settings.seo.title;
const seoDescription = settings.seo.description;
const seoKeywords = settings.seo?.keywords ? settings.seo.keywords.join(", ") : "";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={seoDescription} />
		<meta name="keywords" content={seoKeywords} />
		<title>{seoTitle}</title>
	</head>
	<body class="realtive bg-secondary text-primary overflow-x-hidden">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	body {
		font-family: "Space Grotesk", system-ui;
	}
</style>
